<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/detailId.css">

    <title>Document</title>
</head>
<body>
     <header>
        
        <%- include('./partials/header') %>

    </header> <!-- FIN HEADER -->
        <h1>Detalle producto</h1>
        <main>
    
            <section class="tarjeta bronce">
                <figure>
                    <img src="/img/products/<%=product.image%>" alt="">
                </figure>
                 <article class="detalle-producto"> 
                     <section class="detalle-producto-descripcion">
                         <h3>Categoria suscripci√≥n: <b><%= product.category.name %>  </b> </b></h3>
                        <p>Rango: <b><%= product.name %></b></p>
                        <p>Rango de donacion : <b> AR$ <%=product.min %> - <%= product.max %></b></p>
                      </section>
                    <ul>
                        
                        <li><b>DETALLE: </b></li>
                        <% product.privileges.forEach(des => { %>
                        <li><i class="fas fa-check"></i><%= des %>  </li>
                           
            
                       <% }) %>
                    
                        
                    </ul>
            
                    
                </article>
                <article class="contribuir">
                    <button type="submit"> Contribuir</button>
                </article>

                <a href="/products/<%= product.id %>/edit">edit</a>
                <form action="/products/<%= product.id %>?_method=DELETE" method="post">
                    <button type="submit">delete</button>
                </form>
               
            </section>

            

        </main>


    <footer>
    
        <%- include('./partials/footer') %>

    </footer>

</body>
</html>