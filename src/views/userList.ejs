<!DOCTYPE html>
<html lang="en">
    <!--------------------------------------------------head------------------------------------------------------------->

<head>
    
    <%- include('./partials/head') %>

    <link rel="stylesheet" href="/css/userList.css">
    <title>userList</title>
</head>
<!--------------------------------------------------body------------------------------------------------------------->

<body>
    <header>
        
        <%- include('./partials/header') %>

    </header>
    
    <main>

        <% for(let i = 0; i < user.length; i++){%>
        

        <article class="user">
            <figure><img src="/img/users/<%=user[i].avatar%>" alt=""></figure>

            <section class="userStatic">
                <ul>
                    <li><i class="fas fa-star"></i></li>
                    <li><i class="fas fa-star"></i></li>
                    <li><i class="fas fa-star"></i></li>
                </ul>
                <h3>Bronce</h3>

            </section>

            <section class="userInfo">
                <ul class="userInfoUl">
                 
                <li>Id usuario</li>
                <li><%= user[i].id %> </li>   
                <li>Nombre de usuario</li>    
                <li><%= user[i].firstName %></li>
                <li>Fecha de nacimiento</li>
                <li><%= user[i].birthDate %></li>
                <li>Correo electrónico</li>
                <li><%= user[i].email %></li>
                <li>Teléfono</li>
                <li><%= user[i].phoneNumber %></li>
                <li>Dirección</li>
                <li><%= user[i].adress %></li>
                <li>País</li>
                <li><%= user[i].country %></li>
                <li>Contraseña</li>
                <li><%= user[i].password %></li>
                <li>Métodos de pago

                    <ul>
                        <% for( let j = 0; j < user[i].MedioDePago.length; j++ ) { %>
                            <li> <%= user[i].MedioDePago[j].medio_de_pago %></li>
                        <% } %>
                    </ul>

                </li>


                </ul>
                
            </section>

            <button type="button" class="etiqueta-button-edit"><a href="/user/<%= user[i].id %>" class="editar-button">User detail</a></button>

            <button type="button" class="etiqueta-button-edit"><a href="/user/<%= user[i].id %>/edit" class="editar-button">Editar</a></button>

            <form action="/user/<%= user[i].id %>?_method=DELETE" method="post" class="">
                <button type="submit" class="delete-button">Borrar usuario</button>
            </form>

        </article>
        <%}%>

    </main>









 <!--------------------------------------------------footer------------------------------------------------------------->
 <footer>

    <%- include('./partials/footer') %>

</footer>


</body>
</html>